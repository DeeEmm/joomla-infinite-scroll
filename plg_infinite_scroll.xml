<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content">
	<name>Infinate Scroll</name>
	<author>Jon Parsons</author>
	<creationDate>July 2012</creationDate>
	<copyright>Copyright (C)  2012 Cut and Paste. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>jon@ctrlxctrlv.co.uk</authorEmail>
	<authorUrl>http://ctrlxctrlv.co.uk</authorUrl>
	<version>0.0.1</version>
	<description>jQuery Infinite Scroll Plugin</description>

	<files>
		<filename plugin="plg_infinite_scroll">plg_infinite_scroll.php</filename>
		<filename>plg_infinite_scroll.xml</filename>
                <filename>index.html</filename>
                <folder>js</folder>
	</files>
	<languages>
		
	</languages>
	<config>
            <fields name="params">
                    <fieldset name="basic">
                        <field name="jquery_loading" type="list" default="0" label="Choose how to load JQuery" description="">
                            <option value="0">Load JQuery from CDN</option>
                            <option value="1">Load JQuery from Local Copy</option>
                            <option value="2">Dont Load JQuery</option>
                        </field>
                        <field name="container_selector" type="text" default="body" label="Container Selector String" description="" />
                        <field name="nav_selector" type="text" default="nav" label="Nav Selector String" description="" />
                        <field name="next_selector" type="text" default=".item" label="Next Selector String" description="" />
                        <field name="item_selector" type="text" default=".item" label="Item Selector String" description="" />
                    </fieldset>
                </fields>
	</config>

</extension>
